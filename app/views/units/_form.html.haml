= simple_form_for unit do |f|
  - if unit.errors.any?
    #error_explanation
      %h2
        = pluralize(unit.errors.count, "error")
        prohibited this unit from being saved:
      %ul
        - unit.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :streetNumber, class: 'label'
    = f.text_field :streetNumber, class: 'input'
  .field
    = f.label :streetAddress, class: 'label'
    = f.text_field :streetAddress, class: 'input'
  .field
    = f.label :unitNumber, class: 'label'
    = f.text_field :unitNumber, class: 'input'
  .field
    = f.label :city, class: 'label'
    = f.text_field :city, class: 'input'
  .field
    = f.input :country, as: :country, class: 'input'
  .field
    = f.label :stateProvince, class: 'label'
    = f.text_field :stateProvince, class: 'input'
  .field
    = f.label :zipPostal, class: 'label'
    = f.text_field :zipPostal, class: 'input'
  .actions
    = f.submit
